#include <stdio.h>
#include <string.h>

#define maxBooks 50
#define titleName 50
#define authorName 30

// Function prototypes
int findBook(char title[maxBooks][titleName], char author[maxBooks][authorName], char targetTitle[titleName]);
void addBook(char title[maxBooks][titleName], char author[maxBooks][authorName], int* numBooks);
void removeBook(char title[maxBooks][titleName], char author[maxBooks][authorName], int* numBooks);
void displayBooks(char title[maxBooks][titleName], char author[maxBooks][authorName], int numBooks);
int isLibraryFull(int numBooks);

int main() {
	
    char title[maxBooks][titleName]; // Array to store book titles
    char author[maxBooks][authorName]; // Array to store book authors
    int numBooks = 0; // Number of books

    int choice;

    while (1) {
        printf("\nLIBRARY MANAGEMENT SYSTEM\n");
        printf("1. Add Book\n");
        printf("2. Remove Book\n");
        printf("3. Display Books\n");
        printf("4. Exit\n");
        printf("Enter your choice (1-4): ");
        scanf("%d", &choice);

        while(getchar() != '\n');

        switch (choice) {
            case 1:
                addBook(title, author, &numBooks);
                break;
            case 2:
                removeBook(title, author, &numBooks);
                break;
            case 3:
                displayBooks(title, author, numBooks);
                break;
            case 4:
                printf("Exiting...\n");
                return 0;
            default:
                printf("Invalid choice! Please enter a number between 1 and 4.\n");
        }
    }

    return 0;
}

// Function to find a book by title (uses string comparison)
int findBook(char title[maxBooks][titleName], char author[maxBooks][authorName], char targetTitle[titleName]) {
    for (int i = 0; i < maxBooks; i++) {
        if (strcmp(title[i], targetTitle) == 0) {
            return i; //if Book found
        }
    }
    return -1; //if Book not found
}

// Function to add a book
void addBook(char title[maxBooks][titleName], char author[maxBooks][authorName], int* numBooks) {
    if (isLibraryFull(*numBooks)) {
        printf("Sorry, the library is full! Cannot add more books.\n");
        return;
    }

    printf("Enter the title of the book: ");
    gets(title[*numBooks]);

    printf("Enter the author of the book: ");
    gets(author[*numBooks]); 

    (*numBooks += 1);
    printf("Book added successfully!\n");
}

// Function to remove a book
void removeBook(char title[maxBooks][titleName], char author[maxBooks][authorName], int* numBooks) {
    if (*numBooks == 0) {
        printf("The library is empty! No books to remove.\n");
        return;
    }

    char targetTitle[titleName];
    printf("Enter the title of the book to remove: ");
    gets(targetTitle);

    int book = findBook(title, author, targetTitle);
    if (book == -1) {
        printf("Book not found in the library!\n");
        return;
    }

    for (int i = book; i < *numBooks; i++) {
        strcpy(title[i], title[i + 1]);
        strcpy(author[i], author[i + 1]);
    }

    (*numBooks -= 1);
    printf("Book removed successfully!\n");
}

// Function to display all books in the library
void displayBooks(char title[maxBooks][titleName], char author[maxBooks][authorName], int numBooks) {
    if (numBooks == 0) {
        printf("The library is empty! No books to display.\n");
        return;
    }

    printf("\nList of Books:\n");
    for (int i = 0; i < numBooks; i++) {
        printf("%d. %s - %s\n", i + 1, title[i], author[i]);
    }
}

// Function to check if the library is full
int isLibraryFull(int numBooks) {
    return numBooks == maxBooks;
}
